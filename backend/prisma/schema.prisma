generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  phone        String?  
  address      String?  
  password     String?  
  role         Role     @default(employee)
  active       Boolean  @default(true) 
  deleted      Boolean  @default(false)
  createdAt    DateTime @default(now())
  sales        Transactions[] @relation("TransactionsEmployee")

  logs         Logs[]
}

enum Role {
  employee
  admin
}

model Vehicle {
  id         Int      @id @default(autoincrement())
  brand      String
  model      String
  year       Int
  mileage    Int
  price      Decimal
  condition  Condition
  available  Boolean @default(true)
  addedAt    DateTime @default(now())

  transactions Transactions[]
}

enum Condition {
  new
  used
}

model Transactions {
  id              Int      @id @default(autoincrement())
  userId          Int
  vehicleId       Int
  employeeId      Int
  transactionType TransactionType
  amount          Decimal
  transactionDate DateTime @default(now())

  user     ClientProfile @relation("TransactionsClient", fields: [userId], references: [id])
  vehicle  Vehicle @relation(fields: [vehicleId], references: [id])
  employee User @relation("TransactionsEmployee", fields: [employeeId], references: [id])

  invoice  Invoice?
}

enum TransactionType {
  purchase
  sale
}

model Invoice {
  id            Int      @id @default(autoincrement())
  transactionId Int      @unique
  invoiceNumber String   @unique
  details       String
  totalAmount   Decimal
  invoiceDate   DateTime @default(now())

  transaction Transactions @relation(fields: [transactionId], references: [id])
}

model Logs {
  id         Int      @id @default(autoincrement())
  userId     Int
  action     String
  actionDate DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Statistics {
  id                Int      @id @default(autoincrement())
  month             Int
  year              Int
  totalSales        Decimal @default(0)
  totalPurchases    Decimal @default(0)
  vehiclesSold      Int     @default(0)
  vehiclesPurchased Int     @default(0)
}

model ClientProfile {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  dateOfBirth DateTime?
  gender      Gender?
  address     String?
  phoneNumber String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transactions[] @relation("TransactionsClient")
}

enum Gender {
  male
  female
  other
}
